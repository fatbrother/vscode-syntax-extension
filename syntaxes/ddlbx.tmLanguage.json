{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DDLBX",
  "patterns": [
    {
      "name": "character",
      "begin": "\\'",
      "end": "\\'",
      "patterns": [
        {
          "include": "#letter"
        },
        {
          "include": "#digit"
        },
        {
          "include": "#symbol"
        }
      ]
    },
    {
      "name": "identifier",
      "match": "\\b(Int|Flo|Str|Boo|Reg|List)\\b"
    },
    {
      "name": "expressions",
      "begin": "\\b(\\{)\\b",
      "end": "\\b(\\})\\b",
      "patterns": [
        {
          "include": "#operator"
        },
        {
          "include": "expression"
        }
      ]
    },
    { "include": "#type" }
  ],
  "repository": {
    "letter": {
      "name": "letter",
      "match": "\\b([a-zA-Z])\\b"
    },
    "digit": {
      "name": "digit",
      "match": "\\b([0-9])\\b"
    },
    "symbol": {
      "name": "symbol",
      "match": "\\b([!@#$%^&*()_+\\-=\\[\\]{};':\"\\\\|,.<>\\/?~]+)\\b"
    },
    "operator": {
      "name": "operator",
      "match": "\b(+|-|*|/|+=|-=|*=|/=|==|<|>|<=|>=|&&||||=)\b"
    },
    "expression": {
      "name": "expression",
      "begin": "\\b(\\{)\\b",
      "end": "\\b(\\})\\b",
      "patterns": [
        {
          "include": "#operator"
        },
        {
          "include": "expression"
        }
      ]
    },
    "type": {
      "name": "type",
      "match": "\\b(Int|Flo|Str|Boo|Reg|List)\\b"
    }
  },
  "scopeName": "source.ddlbx"
}
